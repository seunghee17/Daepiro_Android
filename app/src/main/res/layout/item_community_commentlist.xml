<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="7dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김연지 ∙ 5분전"
            style="@style/caption"
            android:textColor="@color/secondary_300"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/additional"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_moreinfo"
            app:tint="@color/secondary_300"/>
    </LinearLayout>
    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        style="@style/body1"
        android:textColor="@color/secondary_800"
        android:text="강남역 잠겼나요?"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/like_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/ic_good"
            app:tint="@color/secondary_300" />
        <TextView
            android:id="@+id/like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/body1"
            android:textColor="@color/orange_500"
            android:text="0"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/rereply_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_community"
            app:tint="@color/secondary_300"
            android:layout_marginLeft="6dp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_community_replylist"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"/>

</LinearLayout>