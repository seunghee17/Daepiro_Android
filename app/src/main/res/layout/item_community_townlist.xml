<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/white"
    android:orientation="vertical">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일상"
                    android:background="@drawable/bg_radius_4"
                    android:backgroundTint="@color/secondary_50"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingRight="12dp"
                    android:paddingLeft="12dp"
                    style="@style/overline"
                    android:textColor="@color/secondary_400"/>
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="글제목"
                    android:layout_marginTop="10dp"
                    style="@style/body1"
                    android:textColor="@color/secondary_800"/>
                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용"
                    android:layout_marginTop="4dp"
                    style="@style/body2"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/secondary_400"/>
            </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="4dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_vertical"
                    android:visibility="visible"
                    app:cardElevation="0dp">
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/image_sample"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_horizontal"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </com.google.android.flexbox.FlexboxLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:id="@+id/writer_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="광교동 ∙ 송승희 ∙ 시간"
            style="@style/caption"
            android:textColor="@color/secondary_300"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_good"
            app:tint="@color/orange_500"/>
        <TextView
            android:id="@+id/like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/body1"
            android:text="1"
            android:paddingTop="2dp"
            android:textColor="@color/orange_500" />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_community"
            android:layout_marginLeft="6dp"
            app:tint="@color/secondary_300"/>
        <TextView
            android:id="@+id/reply_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/body1"
            android:paddingTop="2dp"
            android:text="1"
            android:textColor="@color/secondary_300"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/outline"
        android:layout_marginTop="20dp"/>



</LinearLayout>